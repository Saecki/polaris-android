<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="agersant.polaris.features.player.PlayerFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/artwork_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/player_artwork_horizontal_margin"
        app:cardCornerRadius="@dimen/player_artwork_vertical_radius"
        app:layout_constraintTop_toTopOf="parent">

        <agersant.polaris.ui.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/artwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/player_artwork"
                tools:src="@drawable/artwork" />

        </agersant.polaris.ui.SquareLayout>

    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/controls"
        layout="@layout/view_player_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artwork_container" />

</androidx.constraintlayout.widget.ConstraintLayout>

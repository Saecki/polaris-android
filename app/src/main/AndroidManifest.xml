<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="agersant.polaris">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".PolarisApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:fullBackupOnly="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Polaris"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="agersant.polaris.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="agersant.polaris.PolarisPlaybackService"
            android:description="@string/media_player_service_description"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name="agersant.polaris.PolarisDownloadService"
            android:description="@string/download_service_description"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name="agersant.polaris.PolarisScrobbleService"
            android:description="@string/scrobble_service_description"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
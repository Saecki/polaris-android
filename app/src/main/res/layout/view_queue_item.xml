<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:duplicateParentState="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artwork"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/album_artwork"
        tools:background="@drawable/artwork" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/collection_item_horizontal_padding"
        android:layout_marginEnd="@dimen/collection_item_horizontal_padding"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?textAppearanceListItem"
            android:textColor="@color/queue_item_foreground"
            tools:text="Elevator Sunshine Girl" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?textAppearanceListItemSecondary"
            android:textColor="@color/queue_item_foreground"
            tools:text="Solar Fields" />

    </LinearLayout>

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:duplicateParentState="true"
        android:src="@drawable/ic_sd_storage_black_24dp"
        app:tint="@color/queue_item_foreground" />

</LinearLayout>

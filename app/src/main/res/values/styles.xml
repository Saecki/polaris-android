<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Polaris" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/lightBlue600</item>
        <item name="colorPrimary">@color/lightBlue600</item>
        <item name="colorPrimaryDark">@color/lightBlue800</item>
        <item name="colorAccent">@color/lightBlue600</item>
        <item name="colorSecondary">@color/lightBlue600</item>
        <item name="android:colorBackgroundFloating">@color/backgroundFloating</item>
        <item name="colorBackgroundFloating">@color/backgroundFloating</item>
        <item name="android:windowBackground">@color/backgroundBelow</item>

        <item name="colorBackgroundBelow">@color/backgroundBelow</item>
        <item name="colorAdd">@color/add</item>
        <item name="colorAddNext">@color/addNext</item>
        <item name="colorRemove">@color/remove</item>

        <item name="android:statusBarColor">?colorBackgroundBelow</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>

        <item name="appBarLayoutStyle">@style/BackdropAppBarLayout</item>
        <item name="navigationViewStyle">@style/BackdropNavigation</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <!-- Override Styles -->
    <style name="BackdropAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">?colorBackgroundBelow</item>
    </style>

    <style name="BackdropNavigation" parent="Widget.Design.NavigationView">
        <item name="background">?colorBackgroundBelow</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?colorBackgroundFloating</item>
    </style>

    <!-- Custom Styles -->

    <style name="Content">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:elevation">@dimen/content_elevation</item>
    </style>

    <style name="CollectionSection" parent="Widget.MaterialComponents.TextView">
        <item name="drawableTint">?android:textColorPrimary</item>
        <item name="android:drawablePadding">@dimen/collection_section_icon_padding</item>
        <item name="android:padding">@dimen/collection_section_text_padding</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarSpacing">
        <item name="android:layout_marginTop">@dimen/toolbar_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/toolbar_margin_vertical</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ScrollViewSpacing">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>
